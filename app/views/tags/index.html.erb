<%= render 'shared/header', title: 'Tags' %>
<p><%= link_to 'New Tag', new_tag_path %></p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Tickets</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <!-- TODO: connect to tickets -->
        <td><%= tag.tickets.count %></td>
        <td>
          <%= link_to 'Edit', edit_tag_path(tag) %>
           |
          <%= link_to 'Delete', tag, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
