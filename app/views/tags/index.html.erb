<%= render 'shared/header', title: 'Tags' %>
<% if logged_in? %>
  <p><%= link_to 'New Tag', new_tag_path %></p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Tickets</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= link_to tag.tickets.count, tickets_path(tag: tag.id) %></td>
        <% if logged_in? %>
          <td>
            <%= link_to 'Edit', edit_tag_path(tag) %>
             |
            <%= link_to 'Delete', tag, method: :delete %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
